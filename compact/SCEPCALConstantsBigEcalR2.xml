<define>

<!-- Upstream material -->
     <constant name="UPoffset" value="-50.0*cm"/>
     <constant name="UPL1width" value="50*cm"/>
     <constant name="UPL1gap" value="2*cm"/>
     <constant name="UPL1thick" value="1*cm"/>


<!-- photodetector thicknesses -->
     <constant name="killthick" value="0.001*cm"/> <!-- should be 0.1 mm-->


<!-- constants for dual readout crystal calorimeter -->
    <constant name="DRcrystalwidth1" value="900.0*cm"/>  <!-- should be 1 -->
    <constant name="DRcrystalwidth2" value="900.0*cm"/>  <!-- should be 1 -->
    <constant name="DRcrystallength1" value="400.0*cm"/> <!-- was 5 -->
    <constant name="DRcrystallength2" value="5.0*cm"/> <!-- was 15 -->
    <constant name="DRcrystalgapl" value="0.001*cm"/>
    <constant name="DRcrystalgapmat" value="DRcrystalgapl/2"/>
    <constant name="DRcrystalgapt" value="0.001*cm"/>
    <constant name="DRcrystalhont" value="0.999*DRcrystalgapt"/>
    <constant name="DRcrystalCookiethick" value="0.5*cm"/>
    <constant name="DRcrystalResinthick" value="0.5*cm"/>

    <constant name="DRcrystallength" value="DRcrystallength1+DRcrystallength2"/>  <!-- should be 20 normally, 400 for 20 interacion length test-->



    <constant name="DRcrystalNsize1" value="0"/>    <!-- should be 45 -->
    <constant name="DRcrystalNsize2" value="0"/>    <!-- should be 45 -->

<!-- gap between ecal and hcal  -->
    <constant name="EcalHcalgap" value="0.1*mm"/> <!-- should be small 0.1 mm -->


<!-- constants for dual readout spagetti fiber hcal calorimeter in SCEPCAL -->
<!-- these are radii (or half widths) -->
    <constant name="DRFiberAbswidthSCE" value="1.0*mm"/>  <!-- should be 1.0 mm -->
    <constant name="DRFiberFibwidthSCE" value=".5025*mm"/>  <!-- should be 0.5025 mm -->
    <constant name="holeoverSCE" value="0.025*mm"/>
    <constant name="gapSCE" value="0.0001*mm"/>
    <constant name="DRFiberlengthSCE" value="210*cm"/>   <!-- should be 210 cm -->
    <constant name="DRFiberNsizeSCE" value="250"/>        <!-- should be 250 -->


<!-- constants for dual readout spagetti fiber hcal calorimeter in IDEA -->
    <constant name="DRFiberAbswidthIDEA" value="1.0*mm"/>  <!-- should be 1.0 mm -->
    <constant name="DRFiberFibwidthIDEA" value="0.5025*mm"/>  <!-- should be 0.5025 mm -->
    <constant name="holeoverIDEA" value="0.025*mm"/>
    <constant name="gapIDEA" value="0.0001*mm"/>
    <constant name="DRFiberlengthIDEA" value="400.*cm"/>   <!-- should be 200 cm -->
    <constant name="DRFiberNsizeIDEA" value="199"/>        <!-- should be 150 -->


<!-- constants for dual readout sampling hcal calorimeter -->
    <constant name="DRSampAthick" value="18.*mm"/>  <!-- should be 20 -->
    <constant name="DRSampSthick" value="5.*mm"/>  <!-- should be 5 -->
    <constant name="DRSampQthick" value="5.*mm"/>   <!-- should be 5 -->
    <constant name="DRSeparate" value="1.*mm"/>   <!-- should be 5 -->
    <constant name="DRSampxy" value="20.*cm"/> <!-- should be 20 -->
    <constant name="DRSampNsize" value="0"/>        <!-- should be 25 -->
    <constant name="DRSampNlayer" value="40"/>  <!-- should be 40 -->
    <constant name="shave" value="0.1*mm"/>  <!-- should be small -->

<!-- detector numbering scheme -->

    <constant name="Ecal_ID" value="5"/>
    <constant name="Hcal_ID" value="6"/>
    <constant name="EdgeDet_ID" value="4"/>
    <constant name="Upstream_ID" value="7"/>


    <constant name="edgeoffset" value="50*cm"/>


<!--    <constant name="world_side" value="100*m"/> -->
    <constant name="world_side" value="4*(DRcrystallength1+DRcrystallength2+DRcrystalgapl+2*DRFiberlengthIDEA+EcalHcalgap+edgeoffset+10.)"/>
    <constant name="world_x" value="world_side/1.5"/>  <!-- should be /4 -->
    <constant name="world_y" value="world_side/1.5"/>  <!-- should be /4 -->
    <constant name="world_z" value="world_side"/>



</define>
